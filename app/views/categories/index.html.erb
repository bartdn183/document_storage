<% if current_user.user_type == "pending" %>
  <div class="jumbotron" style="padding: 30px 10px;">
    <h1>Pending Activation...</h1>
  </div>
<% else %>

  <div class="container">
    <div class="row">
      <div class="col-md-6">
       <% if current_user.user_type == "admin" %>
        <%= link_to new_category_path, remote: true, class: "btn btn-default btn-lg", style:"margin: 30px 0;" do %>
          <span class="glyphicon glyphicon-plus"></span>Add Category<% end %>
        <div id="category-form" style="display: none;">
            <%= render 'form' %>
        </div>
       <% end %>
        <div id="show-documents" style="display: none;">
            <%= render 'documents' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="well" style="margin-top: 20px;">
          <h3 style="margin: 0;">Document Categories</h3>
        </div>
          <div class="well">
              <div class="row">
                <div class="col-md-12">
                    <ul>
                      <div id="categories" style="border-bottom: 1px solid gray;">
                        <% if current_user.user_type == "admin" %>
                        <%= render @categories %>
                        <% else %>
                        <%= render 'category' %>
                        <% end %>
                      </div>
                    </ul>
                </div>
              </div>
          </div>
      </div>
    </div>
  </div>
<% end %>



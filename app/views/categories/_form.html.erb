<%= form_with(model: @category, remote: true, multipart: true) do |form| %>

  <div class="form-group">
    <%= form.text_field :name, id: :category_name, placeholder: "Name Category...", class: "form-control" %>
  </div>

  <div class="form-group">
      <strong>Upload Documents</strong>
      <%= file_field_tag "documents[]", type: :file, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary btn-lg btn-block", style: "text-transform: uppercase;" %>
  </div>

<% end %>

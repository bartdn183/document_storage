<div class="jumbotron" style="padding: 30px 10px;">
  <div style="margin-bottom: 20px">
  <button type="button" class="btn btn-default" id="users">Users Panel</button>
  <button type="button" class="btn btn-default" id="users_categories">Users Categories Panel</button>
  </div>
  <div id="users_panel">
	<div class="row">
		<div class="col-md-5">
			<div class="well">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h2 class="panel-title">All Pending Users</h2>
					</div>
					<div id="pending_users">
					 	<%= render 'pending_user' %>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-7">
		  <div class="well" style="background: white; border-radius: 3px; padding: 10px;">
		  	<div class="panel panel-default">
		  		<div class="panel-heading">
		  			<h3 style="margin:0; text-align: center;">All Users</h3>
		  		</div>
			  	<div id="active_users">
					<%= render @users %>
			 	</div>
		  	</div>
		  </div>
		</div>
	</div>
  </div>
  <div id="users_categories_panel">
  		<div class="row">
  			<div class="col-md-5">
  				<div class="panel panel-default">
  					<div class="panel-heading">
  					 	<h2 class="panel-title">Add User To Document Categories</h2>
  					</div>
  					<div class="panel-body">

  					</div>
  				</div>
  			</div>
  		</div>
  </div>
</div>


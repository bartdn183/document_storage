<%= form_with(url: category_access_users_path, id: "form_id") do |form| %>
	<div class="form-group">
	<%= form.collection_select(:user_id, @users, :id, :email, {prompt: "Select User"}, {class: "form-control dropdown-selector clearMe", style: "width: 100%", id: "user_input"}) %>
		</div>
		<div class="form-group">
		<%= form.collection_select(:categories, @categories, :id, :name, { :prompt => "Select Categories"},
	       { :multiple => true, class: "form-control dropdown-selector clearMe", style: "width: 100%", id: "category_input" } ) %>
	</div>
	<%= form.submit "SET CATEGORIES", class: "btn btn-primary btn-block", id: "btn_form" %>
<% end %>